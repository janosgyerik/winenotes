<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.winenotes.lite"
    android:versionCode="3"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name="com.winenotes.application.WineNotesLiteApplication"
        android:allowBackup="false"
        android:icon="@drawable/launcher_main"
        android:label="@string/app_name"
        android:theme="@style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.winenotes.activity.WineListActivity"
            android:label="@string/title_winelist" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.winenotes.activity.EditWineActivity"
            android:label="@string/title_edit_wine" >
        </activity>
        <activity
            android:name="com.winenotes.activity.ViewWineActivity"
            android:label="@string/title_wine" >
        </activity>
        <activity
            android:name="com.winenotes.tools.FileSelectorActivity"
            android:label="@string/title_file_selector"
            android:theme="@style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.winenotes.activity.EditGrapesActivity"
            android:label="@string/title_edit_grapes"
            android:theme="@style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.winenotes.activity.EditAromaImpressionsActivity"
            android:label="@string/title_edit_aroma"
            android:theme="@style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.winenotes.activity.EditTasteImpressionsActivity"
            android:label="@string/title_edit_taste"
            android:theme="@style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.winenotes.activity.EditAftertasteImpressionsActivity"
            android:label="@string/title_edit_aftertaste"
            android:theme="@style/Theme.Dialog" >
        </activity>
    </application>

</manifest>
