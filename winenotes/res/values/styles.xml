<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="customButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_legacy</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="wideButton" parent="customButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="fillWidth">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <color name="headerBackgroundColor">#c8232c</color>

    <style name="mainHeaderWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/headerBackgroundColor</item>
    </style>

    <style name="mainHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/headerBackgroundColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="mainHeaderButton" parent="customButton">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="mainHeaderElement" parent="mainHeader">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="liteWatermark" parent="mainHeaderElement">
        <item name="android:text">(LITE)</item>
        <item name="android:textColor">#aaaaaa</item>
    </style>

    <style name="mainContent">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="wineBasicInfo" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="wineViewLabel" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="wineViewValue" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="wineViewButton" parent="customButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="wineEditingLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="wineEditingLineLeft">
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="wineEditingLineRight">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <dimen name="ratingBarHeight">22dip</dimen>
    <dimen name="smallRatingBarHeight">11dip</dimen>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">@dimen/ratingBarHeight</item>
        <item name="android:maxHeight">@dimen/ratingBarHeight</item>
        <item name="android:layout_height">@dimen/ratingBarHeight</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/smallratingstar</item>
        <item name="android:minHeight">@dimen/smallRatingBarHeight</item>
        <item name="android:maxHeight">@dimen/smallRatingBarHeight</item>
        <item name="android:layout_height">@dimen/smallRatingBarHeight</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Theme.Light.NoTitleBar" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
    </style>

    <style name="dialogContent">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="dialogTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/dialogTitle</item>
        <item name="android:windowTitleSize">35sp</item>
        <item name="android:textColor">#616161</item>
    </style>
</resources>